                            <span class="icon-bar">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                            <span class="text">All Categories</span>
                        </div>
                        <div class="block-content verticalmenu-content">
                            <ul class="teamo-nav-vertical vertical-menu teamo-clone-mobile-menu">
                                <li class="menu-item">
                                    <a asp-action="Listing" asp-controller="Home" asp-route-id="1" class="teamo-menu-item-title" title="Indoor Plants">Indoor Plants</a>
                                </li>
                                <li class="menu-item">
                                    <a title="Outdoor Plants" asp-action="Listing" asp-controller="Home" asp-route-id="2" class="teamo-menu-item-title">Outdoor Plants</a>
                                </li>
                                <li class="menu-item ">
                                    <a title="Flowering Plants" asp-action="Listing" asp-controller="Home" asp-route-id="3" class="teamo-menu-item-title">Flowering Plants</a>   
                                </li>
                                <li class="menu-item">
                                    <a title="Flowers" asp-action="Listing" asp-controller="Home" asp-route-id="4" class="teamo-menu-item-title">Flowers</a>
                                </li>
                               
                            </ul>
                        </div>
                    </div>
                    <div class="header-nav">
                        <div class="container-wapper">
                            <ul class="teamo-clone-mobile-menu teamo-nav main-menu " id="menu-main-menu">
                                <li class="menu-item">
                                    <a asp-action="Index" asp-controller="Home" class="teamo-menu-item-title" title="Home">Home</a>
                                   
                                </li>
                                <li class="menu-item ">
                                    <a asp-action="Details" asp-controller="Carts" asp-route-id="CategoryId" class="teamo-menu-item-title" title="Cart">Cart</a>
                                  
                                 
                                </li>
                                
                                <li class="menu-item ">
                                    <a asp-action="Contact" asp-controller="Home" class="teamo-menu-item-title"
