<body class="home">
    <header class="header style7">
        <div class="top-bar">
            <div class="container">
                  
                <div class="top-bar-left">
                   <div class="logo" >
                            <a href="index.html">
                                <img src="~/assets/images/logo.png" alt="img">
                            </a>
                        </div>
                </div>

                <div class="top-bar-right">
                    <div class="header-language">
                        <div class="teamo-language ">
                            <a href="#" class="active language-toggle" >
                                <span>
                                    English (USD)
                                </span>
                            </a>
                         
                        </div>
                    </div>
                    @{
    var currentUser = await _UserManager.GetUserAsync(User); // Retrieve the user object
    }

                    @if (_signInManager.IsSignedIn(User))
                    {
                        if (currentUser != null && await _UserManager.IsInRoleAsync(currentUser, "User"))
                        {
                            <ul class="header-user-links">
                                <li>
                                    <i class="fa-light fa-sign-out"></i>
                                    <button type="button" class="btn btn-success">
                                        <a asp-action="Logout" asp-controller="Account">Logout</a>
                                    </button>
                                </li>
                            </ul>
                        }

                        else if (currentUser != null && await _UserManager.IsInRoleAsync(currentUser, "Admin"))
                        {
                            <ul class="header-user-links">
                                <li>
                                    <i class="fa-light fa-dashboard"></i>
                                    <button>
                                        <a asp-action="Index" asp-controller="Home" asp-area="Dashboard">Dashboard</a>
                                    </button>
                                </li>
                                <li>
                                    <i class="fa-light fa-sign-out"></i>
                                    <button>
                                        <a asp-action="Logout" asp-controller="Account">Logout</a>
                                    </button>
                                </li>

                            </ul>
                        }
                    }
                    else
                    {
                        <ul class="header-user-links">
                            <li>
                                <a asp-action="Login" asp-controller="Account">Login or Register</a>
                            </li>
                        </ul>
                    }

                    
                </div>
            </div>
        </div>
      
        <div class="header-nav-container rows-space-20">
            <div class="container">
                <div class="header-nav-wapper main-menu-wapper">
