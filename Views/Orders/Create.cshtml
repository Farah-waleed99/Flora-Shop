@model Master.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<section class="checkout-section fix section-padding">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-9">
                <form asp-action="Create" method="post">
                    @* CSRF Token to prevent overposting attacks *@
                    @Html.AntiForgeryToken()

                    <div class="checkout-single-wrapper">
                        <div class="checkout-single boxshado-single">
                            <h4>CheckOut Details</h4>
                            <div class="checkout-single-form">
                                <div class="row g-4">
                                    <!-- Full Name -->
                                    <div class="col-lg-12">
                                        <div style="margin-bottom: 20px;">
                                            <label for="FirstName" style="display: block; font-weight: bold; margin-bottom: 5px;">First Name*</label>
                                            <input name="FullName" id="FullName" required placeholder="Enter your name"
                                                   style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                                        </div>
                                        <div style="margin-bottom: 20px;">
                                            <label for="LastName" style="display: block; font-weight: bold; margin-bottom: 5px;">Last Name*</label>
                                            <input name="FullName" id="FullName" required placeholder="Enter your name"
                                                   style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                                        </div>
                                    </div>

                                    <!-- Address -->
                                    <div class="col-lg-12">
                                        <div style="margin-bottom: 20px;">
                                            <label for="Address" style="display: block; font-weight: bold; margin-bottom: 5px;">Address*</label>
                                            <input name="Address" id="Address" required placeholder="Enter your Address"
                                                   style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                                        </div>
                                    </div>

                                    <!-- City -->
                                    <div class="col-lg-12">
                                        <div style="margin-bottom: 20px;">
                                            <label for="City" style="display: block; font-weight: bold; margin-bottom: 5px;">City*</label>
                                            <select asp-for="City" id="City" required
                                                    style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                                                <option value="" disabled selected>Select a city</option>
                                                <option value="Amman">Amman</option>
                                                <option value="Zarqa">Zarqa</option>
                                                <option value="Irbid">Irbid</option>
                                                <option value="Aqaba">Aqaba</option>
                                                <option value="Mafraq">Mafraq</option>
                                                <option value="Salt">Salt</option>
                                                <option value="Madaba">Madaba</option>
                                                <option value="Jerash">Jerash</option>
                                                <option value="Karak">Karak</option>
                                                <option value="Tafilah">Tafilah</option>
                                                <option value="Ma'an">Ma'an</option>
                                                <option value="Ajloun">Ajloun</option>
                                                <option value="Ramtha">Ramtha</option>
                                                <option value="Sahab">Sahab</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Phone -->
                                    <div class="col-lg-12">
                                        <div style="margin-bottom: 20px;">
                                            <label for="Phone" style="display: block; font-weight: bold; margin-bottom: 5px;">Phone*</label>
                                            <input asp-for="UserPhoneNumber" id="Phone" required placeholder="Enter your phone number"
                                                   style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="col-lg-12">
                                        <div style="margin-bottom: 20px;">
                                            <label for="UserEmail" style="display: block; font-weight: bold; margin-bottom: 5px;">Email Address*</label>
                                            <input asp-for="UserEmail" required placeholder="Enter your email address"
                                                   style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Order Summary Section *@
                    <div class="checkout-item d-flex align-items-center justify-content-between">
                        <h3>Order Details</h3>
                    </div>
                    <div class="product-checout-area">
                        @foreach (var orderItem in Model.OrderItems)
                        {
                            <div class="checkout-item d-flex align-items-center justify-content-between">
                                <p>@orderItem.Product.Name</p>
                                <p>@orderItem.Quantity x @orderItem.UnitPrice</p>
                            </div>
                        }

                        <div class="checkout-item d-flex align-items-center justify-content-between" style="border-top: 2px solid #ccc; padding-top: 10px; margin-top: 20px;">
                            <p>Total</p>
                            <p style="font-size: 1.5rem; font-weight: bold; color: #ff6347; background-color: #f0f0f0; padding: 5px 15px; border-radius: 5px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">$@Model.TotalAmount</p>
                        </div>


                        <div class="checkout-item-2">
                            <div class="form-check-3 d-flex align-items-center from-customradio-2 mt-3">
                                <label class="form-check-label" for="paymentMethod">
                                    Cash on Delivery
                                </label>
                            </div>
                        </div>
                    </div>

                    @* Submit Button *@
                    <div class="checkout-item d-flex align-items-center justify-content-between">
                        <button type="submit"
                                style="background-color: #28a745; color: white; font-size: 16px; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; transition: all 0.3s ease;">
                            Place Order
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

